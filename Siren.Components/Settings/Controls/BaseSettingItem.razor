<SirenStack Row="true" Class="w-100" Spacing="@Spacing" AlignItems="AlignItems.Center">
    <SirenText Typo="Typo.subtitle1">@Text</SirenText>
    @if (!string.IsNullOrWhiteSpace(Label))
    {
        <SirenText Typo="Typo.subtitle2" Class="mud-text-secondary">@Label</SirenText>
    }
    @if (!string.IsNullOrWhiteSpace(ToolChip?.ChipText))
    {
        <SirenToolChip Value="@ToolChip.ChipText" Text="@ToolChip.TooltipText"/>
    }
    <SirenSpacer/>
    @ChildContent
</SirenStack>

@code {
    public record ToolChipData(string ChipText, string TooltipText);
    
    [Parameter] public string Text { get; set; } = "";
    
    [Parameter] public string? Label { get; set; }
    
    [Parameter] public int Spacing { get; set; } = 3;

    [Parameter] public ToolChipData? ToolChip { get; set; }
    
    [Parameter] public RenderFragment? ChildContent { get; set; }
}