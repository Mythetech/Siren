<BaseSettingItem Text="@Text" Label="@Label" ToolChip="@ToolChip" Spacing="@Spacing">
    @if (ChildContent != null)
    {
        @ChildContent
    }
    else
    {
        <SirenButton Variant="@ButtonVariant" Color="@ButtonColor" OnClick="@OnButtonClick">
            @if (!string.IsNullOrWhiteSpace(ButtonIcon))
            {
                <SirenIcon Icon="@ButtonIcon" Color="@ButtonIconColor" Class="mr-2"/>
            }
            @ButtonText
        </SirenButton>
    }
</BaseSettingItem>

@code {
    [Parameter]
    public string Text { get; set; } = "";
    
    [Parameter]
    public string? Label { get; set; }
    
    [Parameter]
    public BaseSettingItem.ToolChipData? ToolChip { get; set; }
    
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    
    [Parameter]
    public int Spacing { get; set; } = 3;
    
    [Parameter]
    public string ButtonText { get; set; } = "";
    
    [Parameter]
    public string? ButtonIcon { get; set; }
    
    [Parameter]
    public Color ButtonColor { get; set; } = Color.Primary;
    
    [Parameter]
    public Color ButtonIconColor { get; set; } = Color.Primary;
    
    [Parameter]
    public Variant ButtonVariant { get; set; } = Variant.Outlined;
    
    [Parameter]
    public EventCallback OnButtonClick { get; set; }
}

