@using Siren.Components.Infrastructure.Keyboard
@using Siren.Components.Settings.Controls

<BaseSettingItem Text="@Shortcut.Description" Spacing="3">
    <MudChip T="string" Size="Size.Small" Variant="Variant.Outlined" Color="Color.Primary">
        @Shortcut.GetDisplayString()
    </MudChip>
</BaseSettingItem>

@code {
    [Parameter]
    public KeyboardShortcut Shortcut { get; set; } = default!;
}

