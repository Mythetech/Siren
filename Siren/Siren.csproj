<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk.Razor">
	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<PublishTrimmed>False</PublishTrimmed>
	</PropertyGroup>
	<PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
		<SignAssembly>true</SignAssembly>
	</PropertyGroup>
	<ItemGroup>
		<SupportedPlatform Include="browser" />
	</ItemGroup>
	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="8.0.8" />
		<PackageReference Include="Microsoft.AspNetCore.Components" Version="8.0.8" />
		<PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="8.0.0" />
		<PackageReference Include="Nerdbank.GitVersioning" Version="3.6.143">
		  <PrivateAssets>all</PrivateAssets>
		  <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
		<PackageReference Include="Photino.Blazor" Version="2.6.0" />
		<PackageReference Include="Microsoft.AspNetCore.Components.WebView" Version="8.0.8" />
		<PackageReference Include="LiteDB" Version="5.0.21" />
		<PackageReference Include="Microsoft.OpenApi.Readers" Version="1.6.17" />
	</ItemGroup>
	<ItemGroup>
		<Content Remove="wwwroot\siren-logo-full.png" />
	</ItemGroup>
	<ItemGroup>
		<Content Update="wwwroot\**">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
	</ItemGroup>
	<ItemGroup>
		<ProjectReference Include="..\Siren.Components\Siren.Components.csproj" />
	</ItemGroup>
	<ItemGroup>
		<EmbeddedResource Include="wwwroot\app.css">
			<ExcludeFromSingleFile>true</ExcludeFromSingleFile>
			<CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
		</EmbeddedResource>
		<EmbeddedResource Include="wwwroot\siren-logo-full.png">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</EmbeddedResource>
	</ItemGroup>
	<ItemGroup>
		<Folder Include="wwwroot\css\" />
		<Folder Include="History\" />
		<Folder Include="wwwroot\webfonts\" />
		<Folder Include="Collections\" />
		<Folder Include="Variables\" />
		<Folder Include="Infrastructure\" />
	</ItemGroup>
	<ItemGroup>
		<None Remove="History\" />
		<None Remove="Collections\" />
		<None Remove="Variables\" />
		<None Remove="Infrastructure\" />
	</ItemGroup>
</Project>